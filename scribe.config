[main]
app_title = Scribe v1.0
database = /home/marc/Documents/marcnotes_db
recent notes count = 8
default notebook = General
screen scale = 1
backup location = /home/marc/Documents/backups/
notes per page = 30

[main_window]
default view = pinned
width = 1280
height = 644
note width = 50
notebook width = 30

[colours]
widget bg = #303234
widget text = #e7edef
note_text = #484445
default note_bg = #e7edef
default notebook_bg = #e7edef
widget highlight = #5f6260
search bg = #6d7c7a

[main window key bindings]
search = <Control-f>
new note = <Control-n>
show notebook view = <Control-b>
show pinned notes view = <Control-p>
show recent notes view = <Control-r>

[note page key bindings]
search = <Control-f>
insert mode = <i>
visual mode = <Escape>

